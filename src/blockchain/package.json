    "chai": "^4.3.7",
    "dotenv": "^16.4.7",
    "ethereum-waffle": "^4.0.10",
    "ethers": "^5.8.0",
    "hardhat": "^2.22.19",
    "kill-port": "^2.0.1",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.2.0",
    "ganache": "^6.4.5"
  },
